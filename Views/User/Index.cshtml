@model IEnumerable<Assist_WebConfig.Models.UserModel>


@{
    ViewBag.Title = "Users";
}

<table class="table table-striped text-center" style="margin-top:20px; color:#e44126">
    <tr>
        <th style="text-align:center">
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th style="text-align:center">
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th style="text-align:center">
            Actions
        </th>
        <th style="text-align:right">
            <a href="@Url.Action("Add", "User")"><i class="fa fa-plus"></i></a>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="color:#000000">
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a class="btn-sm btn-primary" style="text-decoration:none" href="@Url.Action("Edit", "User", new { id = item.UserId })"><i class="fa fa-pencil"></i></a>
                <a class="btn-sm btn-primary" onclick="return confirm('Are you sure you want to delete this item?');" style="text-decoration:none" href="@Url.Action("Delete", "User", new { id = item.UserId })"><i class="fa fa-trash"></i></a>
            </td>
            <td></td>
        </tr>
    }

</table>
